@font-face {  
  font-family: edmondSans ;  
  src: url( ./edmondSans.otf ) format("opentype");  
}  
body {
	height: 100%;
}

#main {
	position: relative;
	height: 100%;
}

#main-inner {
	height: 100%;
}

#information {
	position: absolute;
	left: 150%;
	width: 600px;
	height: 600px;
	margin-left: -300px;
}
.info {
	padding: 10px;
	font-family: arial;
	color: #333;
	font-size: 16px;
	line-height: 18px;
}
#links {
	overflow: hidden;
	height: 30px;
}
#links a {
	display: block;
	float: left;
	width: 25%;
	text-align: center;
	font-size: 20px;
	line-height: 20px;
	padding: 5px 0;
	color: white;
	text-decoration: none;
	font-family: edmondSans;
}
#back {
	display: block;
	text-align: center;
	padding: 10px;
	background: #f2f2f2;
	text-decoration: none;
	font-size: 30px;
	color: #333;
	font-family: edmondSans;
}

#squares {
	position: absolute;
	width: 100%;
	height: 100%;
}
.square {
	float: left;	
	width: 50%;
	height: 50%;
	position: relative;
	color: white;
	text-decoration: none;
}
.square:hover {
}
.text {
	display: block;
	font-size: 60px;
	padding: 15px 30px;
	font-family: edmondSans;
}
.information {
	margin: 25px;
	margin-top: 0;
	padding: 15px;
	background: rgba(255,255,255,0.9);
	color: #333;
	font-family: arial;
	position: absolute;
	bottom: 0;
	right: 0;
	left: 0;
	top: 90px;
}


.square.s1 {
	background-color: #a84b3a;
}
.square.s2 {
	background-color: #ff9f67;
}
.square.s3 { 
	background-color: #233138;
}
.square.s4 {
	background-color: #4c646b;
}

#links .s1 {
	color: #a84b3a;
}
#links .s1.selected {
	background-color: #a84b3a;
	color: white;
}
#links .s2 {
	color: #ff9f67;
}
#links .s3 { 
	color: #233138;
}
#links .s4 {
	color: #4c646b;
}